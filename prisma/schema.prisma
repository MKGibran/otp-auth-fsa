generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        Int       @id @default(autoincrement())
  username  String    @unique
  password  String
  otpSecret String
  createdAt DateTime  @default(now())

  logs      AuthLog[]
}

model AuthLog {
  id        Int      @id @default(autoincrement())
  userId    Int
  action    String
  status    String
  createdAt DateTime @default(now())

  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}
